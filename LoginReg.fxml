<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Kursovaya.LoginRegController">
   <children>
      <TabPane layoutX="-1.0" prefHeight="400.0" prefWidth="608.0" style="-fx-background-color: #483D8B;" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Login">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TextField fx:id="mylogin" layoutX="197.0" layoutY="94.0" prefHeight="45.0" prefWidth="224.0" promptText="Login">
                           <font>
                              <Font size="22.0" />
                           </font>
                        </TextField>
                        <PasswordField fx:id="mypassword" layoutX="197.0" layoutY="166.0" prefHeight="45.0" prefWidth="224.0" promptText="Password">
                           <font>
                              <Font size="22.0" />
                           </font>
                        </PasswordField>
                        <Button fx:id="login" layoutX="250.0" layoutY="249.0" mnemonicParsing="false" onAction="#ClickToLogin" prefHeight="40.0" prefWidth="119.0" style="-fx-background-color: #BC8F8F;" text="Login" textAlignment="CENTER">
                           <font>
                              <Font name="Times New Roman Bold" size="20.0" />
                           </font>
                        </Button>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Create account">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="355.0" prefWidth="598.0">
                     <children>
                        <TextField fx:id="textfield_name" layoutX="40.0" layoutY="57.0" prefHeight="42.0" prefWidth="200.0" promptText="Enter name" />
                        <TextField fx:id="textfield_surname" layoutX="360.0" layoutY="57.0" prefHeight="42.0" prefWidth="200.0" promptText="Enter surname" />
                        <TextField fx:id="textfield_login" layoutX="40.0" layoutY="143.0" prefHeight="42.0" prefWidth="200.0" promptText="Enter login" />
                        <PasswordField fx:id="passwordfield_password" layoutX="360.0" layoutY="143.0" prefHeight="42.0" prefWidth="200.0" promptText="Enter password" />
                        <Button fx:id="reg" layoutX="457.0" layoutY="299.0" mnemonicParsing="false" onAction="#ClickToReg" style="-fx-background-color: #BC8F8F;" text="Registrate">
                           <font>
                              <Font name="Times New Roman Bold" size="18.0" />
                           </font>
                        </Button>
                        <TextField fx:id="textfield_mail" layoutX="40.0" layoutY="225.0" prefHeight="42.0" prefWidth="200.0" promptText="Enter mail" />
                        <TextField fx:id="textfield_location" layoutX="360.0" layoutY="225.0" prefHeight="42.0" prefWidth="200.0" promptText="Enter location" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
